#
# Script for viewing the contents of the worklog
#
# Author: Ryan Kadwell <ryan@riaka.ca>
#

logfile="$HOME/.worklogs/$(ls $HOME/.worklogs | sort -r | head -n1)"
echo -e "\nCurrent Log File: $logfile\n\n$(cat $logfile)\n"